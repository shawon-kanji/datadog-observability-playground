{
  "name": "test-datadog-logs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Datadog learning playground - TypeScript API with APM, tracing, and logging practice",
  "scripts": {
    "dev": "pnpm --filter app dev",
    "build": "pnpm --filter app build",
    "start": "pnpm --filter app start",
    "build:all": "pnpm -r build",
    "clean": "pnpm -r exec rm -rf node_modules dist cdk.out coverage .turbo",
    "clean:all": "pnpm clean && rm -rf node_modules",
    "cdk:deploy": "pnpm --filter cdk deploy",
    "cdk:destroy": "pnpm --filter cdk destroy",
    "cdk:synth": "pnpm --filter cdk synth",
    "cdk:diff": "pnpm --filter cdk diff",
    "lint": "pnpm -r lint --if-present",
    "test": "pnpm -r test",
    "test:app": "pnpm --filter app test",
    "test:cdk": "pnpm --filter cdk test",
    "test:coverage": "pnpm -r test:coverage --if-present",
    "test:watch": "pnpm --filter app test:watch"
  },
  "keywords": [
    "datadog",
    "observability",
    "apm",
    "tracing",
    "logging",
    "typescript",
    "monorepo",
    "pnpm"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
